                </p>
        <p>
                        <label>Firma/Marka Adi</label>

            @Html.TextBoxFor(m=>m.ReferenceName, new { @class="textwidth50"})
            @Html.ValidationMessageFor(m => m.ReferenceName)
        </p>
        

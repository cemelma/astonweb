                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "verticalaligntop2" })
                </p>
                <p>
                    @Html.LabelFor(m => m.Phone)
                    @Html.TextBoxFor(m => m.Phone, new { @class = "textwidth15" })
                </p>
                <p>
                    @Html.LabelFor(m => m.Fax)
                    @Html.TextBoxFor(m => m.Fax, new { @class = "textwidth15" })
                </p>
                <p>
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "textwidth50" })
                    @Html.ValidationMessageFor(m => m.Email)
                </p><br />
                <h3>Ofis</h3>
                <p>
                    @Html.LabelFor(m => m.Address2)
                    @Html.TextAreaFor(m => m.Address2, 2, 0, new { @class = "textwidth50" })
                    @Html.ValidationMessageFor(m => m.Address2, "", new { @class = "verticalaligntop2" })
                </p>
                <p>
                    @Html.LabelFor(m => m.Phone2)
                    @Html.TextBoxFor(m => m.Phone2, new { @class = "textwidth15" })
                </p>
                <p>
                    @Html.LabelFor(m => m.Fax2)
                    @Html.TextBoxFor(m => m.Fax2, new { @class = "textwidth15" })
                </p>
                <p>
                    @Html.LabelFor(m => m.Email2)
                    @Html.TextBoxFor(m => m.Email2, new { @class = "textwidth50" })
                    @Html.ValidationMessageFor(m => m.Email2)
                </p>

<head>
<meta name="viewport" content="width = 1050, user-scalable = no" />
<script type="text/javascript" src="~/Scripts/catalog/jquery.min.1.7.js"></script>
<script type="text/javascript" src="~/Scripts/catalog/modernizr.2.5.3.min.js"></script>
</head>
<body style="overflow:scroll;">
    <script>
        $(function () {

            $(".flipbook div").click(function () {
                //$(this).css("width", "200%");
                var bg = $(this).css('background-image');
                bg = bg.replace('url(', '').replace(')', '');
                var img = "<img class='aq' src='" + bg + "' style='position:absolute;z-index:0; width:" + $(window).width() + "px; height:" + $(window).width() * 1.3 + "px;'>";
                $("body").append(img);
                
                $(".aq").bind("click",function () {
                    $(this).remove();
                });
            });

            
        });

    </script>
<div class="flipbook-viewport">
	<div class="container">
		<div class="flipbook">
            @foreach (var item in Model)
            {
                <div style="background-image:url(@item.Path)"></div>
            }
	@*		<div style="background-image:url(/img/pages/1.jpg)"></div>
			<div style="background-image:url(/img/pages/2.jpg)"></div>
			<div style="background-image:url(/img/pages/3.jpg)"></div>*@

		</div>
	</div>
</div>


<script type="text/javascript">

function loadApp() {

	// Create the flipbook

	$('.flipbook').turn({
			// Width

			width:922,
			
			// Height

			height:600,

			// Elevation

			elevation: 50,
			
			// Enable gradients

			gradients: true,
			
			// Auto center this flipbook

			autoCenter: true

	});
}

// Load the HTML4 version if there's not CSS transform

yepnope({
	test : Modernizr.csstransforms,
	yep: ['/Scripts/catalog/turn.js'],
	nope: ['/Scripts/catalog/turn.html4.min.js'],
	both: ['/Scripts/catalog/basic.css'],
	complete: loadApp
});

</script>

</body>
</html>

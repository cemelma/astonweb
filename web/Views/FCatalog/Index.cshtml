@model IEnumerable<DAL.Entities.Photo>

@{
    ViewBag.Title = "Aston";
}

<!doctype html>
<html>
<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">

    <!-- viewport -->
    <meta content="width=device-width,initial-scale=1" name="viewport">

    <!-- title -->
    <title>ASTON - Dijital Katalog</title>

    <!-- add css and js for flipbook -->
    <link type="text/css" href="/content/file/css/style.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Play:400,700">
    <script src="/content/file/js/jquery.js"></script>
    <script src="/content/file/js/turn.js"></script>
    <script src="/content/file/js/jquery.fullscreen.js"></script>
    <script src="/content/file/js/jquery.address-1.6.min.js"></script>
    <script src="/content/file/js/wait.js"></script>
    <script src="/content/file/js/onload.js"></script>


    <!-- style css  -->
    <style>
        html, body {
            margin: 0;
            padding: 0;
            overflow: auto !important;
        }
    </style>

</head>

<body>


    <!-- BEGIN FLIPBOOK STRUCTURE -->
    <div id="fb5-ajax">

        <!-- BEGIN HTML BOOK -->
        <div data-current="book5" class="fb5" id="fb5">

            <!-- PRELOADER -->
            <div class="fb5-preloader">
                <div id="wBall_1" class="wBall">
                    <div class="wInnerBall">
                    </div>
                </div>
                <div id="wBall_2" class="wBall">
                    <div class="wInnerBall">
                    </div>
                </div>
                <div id="wBall_3" class="wBall">
                    <div class="wInnerBall">
                    </div>
                </div>
                <div id="wBall_4" class="wBall">
                    <div class="wInnerBall">
                    </div>
                </div>
                <div id="wBall_5" class="wBall">
                    <div class="wInnerBall">
                    </div>
                </div>
            </div>

            <!-- BACK BUTTON -->
            <a href="#" id="fb5-button-back"><<</a>

            <!-- BACKGROUND FOR BOOK -->
            <div class="fb5-bcg-book"></div>

            <!-- BEGIN CONTAINER BOOK -->
            <div id="fb5-container-book">

                <!-- BEGIN deep linking -->
                <section id="fb5-deeplinking">
                    <ul>
                        <li data-address="page1" data-page="1"></li>
                        <li data-address="page2-3" data-page="2"></li>
                        <li data-address="page2-3" data-page="3"></li>
                        <li data-address="page4-5" data-page="4"></li>
                        <li data-address="page4-5" data-page="5"></li>
                        <li data-address="page6-7" data-page="6"></li>
                        <li data-address="page6-7" data-page="7"></li>
                        <li data-address="page8-9" data-page="8"></li>
                        <li data-address="page8-9" data-page="9"></li>
                        <li data-address="end" data-page="10"></li>
                    </ul>
                </section>
                <!-- END deep linking -->


                <!-- BEGIN ABOUT -->
                <section id="fb5-about">
                    <!-- <h3>How to read a book?</h3>
                  <p></p>
                  <p>&nbsp;</p> -->
                </section>
                <!-- END ABOUT -->


                <!-- BEGIN BOOK -->
                <div id="fb5-book">


                    @foreach (var item in Model)
                    {
                        <div data-background-image="@item.Path" class="">
                            <div class="fb5-cont-page-book">
                                <div class="fb5-page-book">
                                </div>
                                <div class="fb5-meta">
                                </div>
                            </div>
                        </div>
                    }




                </div>
                <!-- END BOOK -->


                <!-- arrows -->
                <a class="fb5-nav-arrow prev"></a>
                <a class="fb5-nav-arrow next"></a>


            </div>
            <!-- END CONTAINER BOOK -->

            <!-- BEGIN FOOTER -->
            <div id="fb5-footer">

                <div class="fb5-bcg-tools"></div>

                <!-- <a id="fb5-logo" target="_blank" href="http://www.rfsintl.com/">
                <img alt="" src="img/logo.png">
            </a> -->

                <div class="fb5-menu" id="fb5-center">
                    <ul>

                        <li>
                            <a title="YAKINLAŞ" class="fb5-zoom-in"></a>
                        </li>

                        <!-- icon_zoom_out -->

                        <li>
                            <a title="UZAKLAŞ" class="fb5-zoom-out"></a>
                        </li>

                        <!-- icon_zoom_auto -->
                        <li>
                            <a title="OTO ZOOM" class="fb5-zoom-auto"></a>
                        </li>

                        <!-- icon_zoom_original -->
                        <li>
                            <a title="ORJİNAL BOYUT (ÖLÇEK 1:1)" class="fb5-zoom-original"></a>
                        </li>


                        <!-- icon_allpages -->
                        <li>
                            <a title="TÜM SAYFALARI GÖSTER " class="fb5-show-all"></a>
                        </li>

                         <li>
                            <a title="TAM / NORMAL EKRAN" class="fb5-fullscreen"></a>
                        </li>


                    </ul>
                </div>

               



            </div>
            <!-- END FOOTER -->


            <!-- BEGIN ALL PAGES -->
            <div id="fb5-all-pages" class="fb5-overlay">

                <section class="fb5-container-pages">

                    <div id="fb5-menu-holder">

                        <ul id="fb5-slider">

                            @{ int ix = 1; }
                            @foreach (var item in Model)
                            {
                                <li class="@(ix++)">
                                <img alt="" style="width:200px" data-src="@item.Path">
                            </li>
                            }
                            

                        </ul>

                    </div>

                </section>

            </div>
            <!-- END ALL PAGES -->

        </div>
        <!-- END HTML BOOK -->

    </div>
    <!-- END FLIPBOOK STRUCTURE -->

    <!-- CONFIGURATION FLIPBOOK -->
    <script>
        jQuery('#fb5').data('config',
        {
            "page_width": "550",
            "page_height": "745",
            "email_form": "office@somedomain.com",
            "zoom_double_click": "1",
            "zoom_step": "0.06",
            "double_click_enabled": "true",
            "tooltip_visible": "true",
            "toolbar_visible": "true",
            "gotopage_width": "30",
            "deeplinking_enabled": "true",
            "rtl": "false",
            'full_area': 'true',
            'lazy_loading_thumbs': 'false',
            'lazy_loading_pages': 'false'
        })
    </script>




</body>
</html>
